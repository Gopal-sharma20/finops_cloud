# CloudOptima Environment Variables

# Development Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILES=default

# Azure Configuration
AZURE_DEFAULT_REGION=eastus
AZURE_PROFILES=default

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_TELEMETRY=false

# MCP Server URLs
MCP_SERVER_URL=http://localhost:3001
AZURE_MCP_SERVER_URL=http://localhost:8000
GCP_MCP_SERVER_URL=http://localhost:3002
AWS_INTEGRATION_METHOD=mcp
AZURE_INTEGRATION_METHOD=mcp
GCP_INTEGRATION_METHOD=mcp
